NODE_ENV=test # development | production | test
PORT=9999
ALLOWED_ORIGINS=

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=123456789
POSTGRES_DB=hirely_test_db
DATABASE_URL="postgresql://postgres:123456789@localhost:5432/hirely_test_db"

# Seed User Passwords (for demo users)
SEED_USER_PASSWORD=123456

# JWT Configuration
JWT_SECRET=jwt_super_secret
JWT_ACCESS_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Gotenberg Configuration
GOTENBERG_URL=http://localhost:3000

# Resume limits
MAX_RESUME_SECTIONS=20

# Scheduled plan changes
PLAN_CHANGE_INTERVAL_SECONDS=300

# Export operations
EXPORT_CLEANUP_INTERVAL_SECONDS=3600
EXPORT_CLEANUP_BATCH_SIZE=100
EXPORT_CLEANUP_DRY_RUN=false
EXPORT_ALERT_WINDOW_MINUTES=60
EXPORT_ALERT_MIN_EVENTS=20
EXPORT_ALERT_FAILURE_RATIO=0.25
EXPORT_ALERT_COOLDOWN_SECONDS=900
EXPORT_JOB_ATTEMPTS=3
EXPORT_JOB_BACKOFF_MS=10000
EXPORT_JOB_KEEP_COMPLETED=1000
EXPORT_JOB_KEEP_FAILED=1000

# Email configuration
MAIL_FROM=no-reply@hirely.app

# Export storage
EXPORT_STORAGE_DRIVER=local

# Billing
BILLING_PROVIDER=mock
BILLING_CYCLE_DAYS=30
BILLING_DOWNGRADE_BEHAVIOR=cycle_end
BILLING_WEBHOOK_SECRET=test-billing-secret
BILLING_STRIPE_WEBHOOK_SECRET=test-stripe-secret
BILLING_PADDLE_WEBHOOK_SECRET=test-paddle-secret
BILLING_WEBHOOK_TOLERANCE_SECONDS=300
