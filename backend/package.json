  "scripts": {
    "dev": "tsx watch --watch-path src --watch-path .env --watch-path docs/swagger.yaml src/server.ts",
    "worker:dev": "tsx watch src/workers.ts",
    "arch:check": "node scripts/check-module-boundaries.mjs",
    "typecheck": "tsc --noEmit",
    "build": "rimraf ./dist && tsc && tsc-alias",
    "start": "node dist/server.js",
    "worker:start": "node dist/workers.js",
    "format:fix": "prettier --write .",
    "format": "prettier --check .",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "lint": "npm run arch:check && eslint ./src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "postinstall": "prisma generate",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:reset": "prisma migrate reset",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed",
    "prisma:studio": "prisma studio",
    "prisma:validate": "prisma validate",
    "openapi:lint": "redocly lint docs/swagger.yaml --format stylish --max-problems 100 --config .redocly.yaml"
  },
  "dependencies": {
    "@hirely/resume-core": "file:../packages/resume-core",
