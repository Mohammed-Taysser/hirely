# Environment
NODE_ENV=development
PORT=8080
ALLOWED_ORIGINS=http://localhost:5173

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/hirely_db

# Seed
SEED_USER_PASSWORD=ChangeMe123!

# JWT
JWT_SECRET=replace-with-strong-secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Gotenberg
GOTENBERG_URL=http://localhost:3000

# Resume limits
MAX_RESUME_SECTIONS=20

# Scheduled plan changes
PLAN_CHANGE_INTERVAL_SECONDS=300

# Export operations
EXPORT_CLEANUP_INTERVAL_SECONDS=3600
EXPORT_CLEANUP_BATCH_SIZE=100
EXPORT_JOB_ATTEMPTS=3
EXPORT_JOB_BACKOFF_MS=10000
EXPORT_JOB_KEEP_COMPLETED=1000
EXPORT_JOB_KEEP_FAILED=1000

# Optional storage/email
UPLOADS_DIR=uploads
EXPORT_STORAGE_DRIVER=local

MAIL_FROM=no-reply@hirely.app
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# S3 (required when EXPORT_STORAGE_DRIVER=s3)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=
S3_FORCE_PATH_STYLE=false
